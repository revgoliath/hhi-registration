name: build-tauri

on:
  push:
    tags:
      - "v*"            # build when you push a tag like v0.2.0
  workflow_dispatch:     # allow manual run from the Actions tab

jobs:
  build:
    strategy:
      matrix:
        os: [macos-latest, windows-latest]
    runs-on: ${{ matrix.os }}

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: "20"

      - name: Setup Rust
        uses: dtolnay/rust-toolchain@stable

      # (Optional) cache node_modules to speed up builds
      - name: Cache node_modules
        uses: actions/cache@v4
        with:
          path: |
            **/node_modules
            ~/.npm
          key: ${{ runner.os }}-node-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-node-

      - name: Install frontend deps
        run: npm ci

      - name: Build web assets
        run: npm run build

      # Tauri builds + uploads artifacts to a GitHub Release for tag builds,
      # or as workflow artifacts for manual runs.
      - name: Tauri build
        uses: tauri-apps/tauri-action@v0
        env:
          # Signing/notarization secrets are optional; omit for unsigned builds
          # On macOS, unsigned DMG will still build (Gatekeeper shows warning).
          # On Windows, unsigned MSI triggers SmartScreen "More info -> Run anyway".
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          # for tag builds, publish a release named after the tag
          tagName: ${{ github.ref_name }}
          releaseName: "HHI Registration ${{ github.ref_name }}"
          releaseDraft: false
          prerelease: false
